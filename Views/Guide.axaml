<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:l="clr-namespace:Jeek.Avalonia.Localization;assembly=Jeek.Avalonia.Localization"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="JagexAccountSwitcher.Views.Guide">
    
    <ScrollViewer>
        <StackPanel Margin="20">
            <!-- Title -->
            <TextBlock Text="{l:Localize SetupGuide}" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Margin="0,0,0,15"
                       HorizontalAlignment="Center"/>
            
            <!-- First Section -->
            <Border BorderBrush="#333333" BorderThickness="0,0,0,1" Padding="0,0,0,10" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="{l:Localize Step1Title}" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Margin="0,0,0,10"/>
                    
                    <TextBlock Text="{l:Localize Step1Description}" 
                               TextWrapping="Wrap" 
                               Margin="0,0,0,10"/>
                    
                    <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="Auto,*" Margin="10,0,0,10">
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="1." FontWeight="Bold" Margin="0,0,10,5"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{l:Localize Step1Point1}" 
                                   TextWrapping="Wrap" Margin="0,0,0,5"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="2." FontWeight="Bold" Margin="0,0,10,5"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{l:Localize Step1Point2}" 
                                   TextWrapping="Wrap" Margin="0,0,0,5"/>
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="3." FontWeight="Bold" Margin="0,0,10,5"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{l:Localize Step1Point3}" 
                                   TextWrapping="Wrap" Margin="0,0,0,5"/>
                        
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="4." FontWeight="Bold" Margin="0,0,10,5"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{l:Localize Step1Point4}" 
                                   TextWrapping="Wrap" Margin="0,0,0,5"/>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Second Section -->
            <StackPanel>
                <TextBlock Text="{l:Localize Step2Title}" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Margin="0,0,0,10"/>
                
                <TextBlock Text="{l:Localize Step2Description}" 
                           TextWrapping="Wrap" 
                           Margin="0,0,0,10"/>
                
                <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="Auto,*" Margin="10,0,0,10">
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="1." FontWeight="Bold" Margin="0,0,10,5"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{l:Localize Step2Point1}" 
                               TextWrapping="Wrap" Margin="0,0,0,5"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="2." FontWeight="Bold" Margin="0,0,10,5"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{l:Localize Step2Point2}" 
                               TextWrapping="Wrap" Margin="0,0,0,5"/>
                    
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="3." FontWeight="Bold" Margin="0,0,10,5"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{l:Localize Step2Point3}" 
                               TextWrapping="Wrap" Margin="0,0,0,5"/>
                    
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="4." FontWeight="Bold" Margin="0,0,10,5"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{l:Localize Step2Point4}" 
                               TextWrapping="Wrap" Margin="0,0,0,5"/>
                </Grid>
            </StackPanel>
            
            <!-- Warning Box -->
            <Border Background="#FFF4DD" BorderBrush="#FFD700" BorderThickness="1" CornerRadius="4" Padding="10" Margin="0,15,0,0">
                <TextBlock Text="{l:Localize WarningMessage}" 
                           TextWrapping="Wrap" 
                           Foreground="#CC6600"/>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>